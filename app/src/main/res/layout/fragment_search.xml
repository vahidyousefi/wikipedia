<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipWiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkable="true"
        android:text="Wiki"
        android:textSize="18sp"
        app:chipIcon="@drawable/ic_wiki"
        app:chipIconTint="?attr/colorTertiary" />

    <!-- for filtering -->
    <com.google.android.material.chip.Chip
        android:theme="@style/MyChip"
        android:id="@+id/chipWikimedia"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkable="true"
        android:text="Wikimedia"
        android:textSize="18sp" />

    <!-- for Entry -->
    <com.google.android.material.chip.Chip
        android:theme="@style/MyChip"
        android:id="@+id/chipWiki1"
        style="@style/Widget.MaterialComponents.Chip.Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkable="false"
        android:text="WikiMeta"
        android:textSize="18sp"
        app:chipIcon="@drawable/ic_wikimeta"
        app:iconStartPadding="8dp" />


    <com.google.android.material.chip.Chip
        android:id="@+id/chipWiki2"
        style="@style/Widget.MaterialComponents.Chip.Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkable="false"
        android:text="WikiMeta"
        android:textSize="18sp"
        app:closeIcon="@drawable/ic_close"
        app:iconStartPadding="8dp" />

    <!-- Chip Group -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:background="@drawable/shape_hsv_stroke"
            android:id="@+id/chipGroupMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAndroid"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android"
                android:textSize="18sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipKotlin"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotlin"
                android:textSize="18sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipXml"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XML"
                android:textSize="18sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGradle"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gradle"
                android:textSize="18sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEmulator"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emulator"
                android:textSize="18sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSdk"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDK"
                android:textSize="18sp" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

</LinearLayout>