<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Wikipedia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/white_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_dark</item>


        <item name="android:colorBackground">@color/white_night</item>

        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/yello</item>
        <item name="colorSecondaryContainer">@color/blue_ripple</item>

        <item name="colorSurfaceContainerLow">@color/white_night</item>

        <item name="colorControlActivated">@color/white_night</item>

        <item name="colorTertiary">@color/black</item>

        <item name="fontFamily">@font/open_sans_medium</item>

        <!-- ripple color lack -->
        <item name="colorTertiaryContainer">#87BBDEFB</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Wikipedia" parent="Base.Theme.Wikipedia" />

    <!-- Customize your Popup-Menu here. -->
    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">

        <item name="colorSurfaceContainer">@color/blue_light</item>
        <item name="colorControlHighlight">@color/blue_dark</item>
        <item name="android:tint">@color/white_night</item>
        <item name="android:textColor">@color/white_night</item>

        <item name="android:textSize">16sp</item>
    </style>

    <!-- Customize your ToolBar-Main here. -->
    <style name="ToolbarMain" parent="ThemeOverlay.Material3.BottomAppBar">

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/blue_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Customize your ToolBar-Setting here. -->
    <style name="ToolbarSettings" parent="ThemeOverlay.Material3.BottomAppBar">

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white_night</item>
        <item name="colorOnSurface">@color/white</item>

    </style>

    <!-- Customize your Bottom Navigation here. -->
    <style name="MyBottomNavigation" parent="ThemeOverlay.Material3.BottomAppBar">

        <item name="colorPrimaryVariant">#AFE6E6E6</item>
        <item name="colorSurface">@color/white_night</item>
        <item name="colorOnSurface">@color/blue_dark</item>

        <item name="colorSecondaryContainer">@color/blue_ripple</item>
        <item name="colorOnSecondaryContainer">@color/blue_dark</item>
    </style>

    <!-- Customize your Chip here. -->
    <style name="MyChip" parent="Theme.MaterialComponents.DayNight">

        <item name="colorOnSecondaryContainer">@color/blue_dark</item>
    </style>

    <!-- Customize your Text En here. -->
    <style name="MyTextEn" parent="ThemeOverlay.Material3.Light">

        <item name="fontFamily">@font/noto_serif_mediumitalic</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- Customize your Text Fa here. -->
    <style name="MyTextFa" parent="Widget.Material3.ChipGroup">

        <item name="fontFamily">@font/dana_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>